
.info{
	width: 100%;
	box-sizing: border-box;
	padding:30rpx;
}
.info-left{
	width: 18.5%;
	height:166rpx;
}
.info-left image{
	width: 100%;
	height:100%;
}
.info-right{
	height: 166rpx;
	width: 77%;
}
.info-item{
	width:110rpx;
	height: 40rpx;
	border: solid 1rpx #E7E7E7;
	text-align: center;
	line-height: 40rpx;
	margin-right: 20rpx;
}
.he10{
	width: 100%;
	height: 10rpx;
}
.line{
	box-sizing: border-box;
	padding: 40rpx 4% 0rpx;
}
.line-red{
	border-left: solid 6rpx #2E82FF;
	text-indent: 20rpx;
}
.text{
	width: 100%;
	box-sizing: border-box;
	padding:30rpx;
	text-align: justify;
	line-height: 38rpx;
}

.boxleft{
	box-sizing: border-box;
	padding:20rpx 30rpx 30rpx;
	border-bottom: solid 1rpx #F0F0F0;
}
.head-two{
	width:60rpx;
	height:60rpx;
	border-radius: 50%;
	overflow: hidden;
}
.head-two image{
	width:100%;
	height: 100%;
}
.name{
	width: 50%;
	margin-left: 20rpx;
	position: relative;
	top:-16rpx;
}
