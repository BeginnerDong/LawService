.top{
	box-sizing: border-box;
	width: 100%;
	padding: 30rpx;
}
.phone{
	width: 100%;
	height: 100rpx;
	box-sizing: border-box;
	padding: 0rpx 30rpx;
	line-height: 100rpx;
}
.phone image{
	width: 48rpx;
	height: 50rpx;
	margin-top: 28rpx;
}

.info{
	border-bottom: solid 1rpx #F2F2F2;
	box-sizing: border-box;
	padding: 30rpx 5%;
	position: relative;
}
.info-list{
	background: #F5F5F5;
	border-radius: 6rpx;
	float: right;
	width: 76%;
	box-sizing: border-box;
	padding-left: 30rpx;
	height: 60rpx;
}
button{
	width: 80%;
	height: 80rpx;
	margin: 260rpx auto 50rpx;
}

